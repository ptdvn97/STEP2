#include <main.h>

#define BUT_1   input(PIN_B4)
#define BUT_2   input(PIN_B5)

#define A PIN_D1
#define B PIN_D2
#define C PIN_D3
#define D PIN_D4

int k=0,h=0;
#INT_RB
void interrupt()
{
   while(1)
   {
   if(BUT_1==1)
   {
      h=1;
      while(BUT_1==1)
         {delay_ms(1);}
      while(h==1)
      {
         output_bit(A,1);
      output_bit(B,0);
      output_bit(C,1);
      output_bit(D,0);
      delay_ms(70);
      output_bit(A,0);
      output_bit(B,1);
      output_bit(C,1);
      output_bit(D,0);
      delay_ms(70);
      output_bit(A,0);
      output_bit(B,1);
      output_bit(C,0);
      output_bit(D,1);
      delay_ms(70);
      output_bit(A,1);
      output_bit(B,0);
      output_bit(C,0);
      output_bit(D,1);
      delay_ms(70);
         if(BUT_2==1)
            {
               h=0;
               break;
               while(BUT_2==0)
         {delay_ms(1);}
            }
      }
   }
   if(BUT_2==1)
   {
      k=1;
      while(BUT_2==1)
         {delay_ms(1);}
      while(k==1)
      {
         
         OUTPUT_BIT(PIN_D5,0);
         
         OUTPUT_BIT(PIN_D6,1);
         if(BUT_1==0)
            {
               k=0;
               break;
               while(BUT_1==1)
         {delay_ms(1);}
            }
      }
   }
}}

void main()
{
   output_d(0x00);
   clear_interrupt(INT_RB);
   enable_interrupts(INT_RB);
   enable_interrupts(GLOBAL);  
}
