#include <main.h>

#define A PIN_D1
#define B PIN_D2
#define C PIN_D3
#define D PIN_D4

#define BUT_1   input(PIN_B4)
#define BUT_2   input(PIN_B5)

int a=0,b=0;

#INT_RB
void interrupt()
{
   while(1)
   {
   if(BUT_1==1)
   {
      a=1;
      while(BUT_1==1)
         {delay_ms(1);}
      while(a==1)
      {
         output_bit(A,1);
      output_bit(B,0);
      output_bit(C,1);
      output_bit(D,0);
      delay_ms(70);
      output_bit(A,0);
      output_bit(B,1);
      output_bit(C,1);
      output_bit(D,0);
      delay_ms(70);
      output_bit(A,0);
      output_bit(B,1);
      output_bit(C,0);
      output_bit(D,1);
      delay_ms(70);
      output_bit(A,1);
      output_bit(B,0);
      output_bit(C,0);
      output_bit(D,1);
      delay_ms(70);
         if(BUT_2==1)
            {
               a=0;
               break;
               while(BUT_2==0)
         {delay_ms(1);}
            }
      }
   }
   if(BUT_2==1)
   {
      b=1;
      while(BUT_2==1)
         {delay_ms(1);}
      while(b==1)
      {
         
         output_bit(A,1);
      output_bit(B,0);
      output_bit(C,0);
      output_bit(D,1);
      delay_ms(70);
      output_bit(A,0);
      output_bit(B,1);
      output_bit(C,0);
      output_bit(D,1);
      delay_ms(70);
      output_bit(A,0);
      output_bit(B,1);
      output_bit(C,1);
      output_bit(D,0);
      delay_ms(70);
      output_bit(A,1);
      output_bit(B,0);
      output_bit(C,1);
      output_bit(D,0);
      delay_ms(70);
         if(BUT_1==0)
            {
               b=0;
               break;
               while(BUT_1==1)
         {delay_ms(1);}
            }
      }
   }
}}

void main()
{
   output_d(0xFF);
   clear_interrupt(INT_RB);
   enable_interrupts(INT_RB);
   enable_interrupts(GLOBAL);  
}
